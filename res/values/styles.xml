<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Mapzen" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mapzen</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBar.Solid.Mapzen" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/MapzenTitleText</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MapzenTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="MapzenSearchText" parent="@android:style/TextAppearance.Holo.Widget.EditText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources>
