<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Mapzen" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_mapzen</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Mapzen</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mapzen</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Mapzen</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Mapzen</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mapzen</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_mapzen</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_mapzen</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mapzen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:buttonStyle">@android:style/Widget.Button</item>
    </style>

    <style name="ActionBar.Solid.Mapzen" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_white_shadow</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_mapzen</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_mapzen</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mapzen</item>
    </style>

    <style name="ActionBar.Transparent.Mapzen" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_mapzen</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mapzen</item>
    </style>

    <style name="PopupMenu.Mapzen" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mapzen</item>
    </style>

    <style name="DropDownListView.Mapzen" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mapzen</item>
    </style>

    <style name="ActionBarTabStyle.Mapzen" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mapzen</item>
    </style>

    <style name="DropDownNav.Mapzen" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_mapzen</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mapzen</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mapzen</item>
    </style>

    <style name="ProgressBar.Mapzen" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mapzen</item>
    </style>

    <style name="ActionButton.CloseMode.Mapzen" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mapzen</item>
    </style>

</resources>
